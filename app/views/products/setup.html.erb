<div class="container">
  <div class="page-header" id="banner">
    <div class="row my-4">
      <div class="col-lg-12">
        <h2>NG条件の設定</h2>
        <div class="form-inline">
          <%= link_to 'テンプレート取得', {:controller => 'products', :action => 'setup', :format => 'xlsx'}, {class: 'btn btn-success', id: 'download_template', style: 'margin-right: 20px;'} %>
          <%= form_tag('/products/setup', method:'post', multipart: true, id:"ng_setup") do %>
            <div class="form-inline">
            <label style="vertical-align:middle;">
              <span class="btn btn-primary" style="width:220px;">
                除外キーワードの登録
                <input type="file" name="ng_key" onChange="$('#ng_setup').submit();" style="display:none">
              </span>
            </label>

            <label style="vertical-align:middle; margin-left:30px;">
              <span class="btn btn-info" style="width:220px;">
                除外ブランド名の登録
                <input type="file" name="ng_brand" onChange="$('#ng_setup').submit();" style="display:none">
              </span>
            </label>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-5">
        <br>
        <table class="table table-striped table-hover table-bordered" style='table-layout:fixed;'>
          <thead class="thead-light">
            <tr>
              <th style='width:400px;'>除外キーワード</th>
            </tr>
          </thead>
          <tbody>
            <% @keywords.each do |row| %>
            <tr>
              <td><%= row.keyword %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-lg-5">
        <br>
        <table class="table table-striped table-hover table-bordered" style='table-layout:fixed;'>
          <thead class="thead-light">
            <tr>
              <th style='width:400px;'>除外ブランド名</th>
            </tr>
          </thead>
          <tbody>
            <% @brands.each do |row| %>
            <tr>
              <td><%= row.keyword %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
